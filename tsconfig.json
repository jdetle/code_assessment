{
    "compileOnSave": false,
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "jsx": "preserve",
      "allowJs": true,
      "sourceMap": true,
      "removeComments": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "preserveSymlinks": false,
      "preserveConstEnums": false,
      "skipLibCheck": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "typeRoots": [
        "./node_modules/@types",
        "./typings"
      ],
      "lib": [
        "dom",
        "es2015",
        "es2016"
      ]
    },
    "exclude": [
      "./dist"
    ]
  }
